<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.callous.testing.MainActivity">


    <RelativeLayout
        android:layout_width="363dp"
        android:layout_height="428dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp">

        <Button
            android:id="@+id/but1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout4"
            android:layout_marginTop="116dp"
            android:background="#FFE793"
            android:text="Activity"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/but1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="67dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D77800"

                android:stateListAnimator="@drawable/ic_launcher_background"
                android:text="Android IDE" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#88BA53"
                android:text="Android Studio"

                />

        </LinearLayout>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Android"
                android:textSize="20sp"
                android:textColor="#F0581B"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apple"
                android:textColor="#F0581B"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Blackberry"
                android:textSize="20sp"
                android:textColor="#F0581B"


                />
        </LinearLayout>





</android.support.constraint.ConstraintLayout>
